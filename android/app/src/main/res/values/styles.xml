<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme - Matching PWA Design -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- PWA Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Remove Action Bar to match PWA standalone display -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Status Bar Configuration -->
        <item name="android:statusBarColor">@color/pwa_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <!-- windowLightNavigationBar requires API 27+, defined in values-v27/styles.xml -->
        
        <!-- Edge-to-Edge Display (Android 11+) -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
        
        <!-- Fullscreen/Immersive Mode -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/pwa_background</item>
    </style>

    <!-- No Action Bar Theme (for activities) -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/pwa_background</item>
    </style>

    <!-- Launch/Splash Screen Theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="android:statusBarColor">@color/pwa_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <!-- windowLightNavigationBar requires API 27+, defined in values-v27/styles.xml -->
    </style>
</resources>