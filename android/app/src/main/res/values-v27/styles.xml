<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
        API 27+ specific overrides for AppTheme
        Android automatically merges this with the base AppTheme from values/styles.xml
        Only the windowLightNavigationBar attribute is added here for API 27+
    -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Navigation Bar - API 27+ only -->
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- 
        API 27+ specific overrides for AppTheme.NoActionBarLaunch
        Android automatically merges this with the base style from values/styles.xml
    -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Navigation Bar - API 27+ only -->
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>

